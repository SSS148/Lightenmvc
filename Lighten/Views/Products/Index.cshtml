@model IEnumerable<Lighten.Models.Products>

@{ ViewData["LightCompany"] = "Home"; }
@{
    Layout = "_Layout";
}
<br />
<br />
<p>
    <a asp-action="Create">Click here to Add Light</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LightModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LightCompany)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LightType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.LightModel)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LightCompany)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LightType)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.Id" type="button" class="btn btn-warning">Edit</a>
        <a asp-action="Details" asp-route-id="@item.Id" type="button" class="btn btn-warning">Details</a>
        <a asp-action="Delete" asp-route-id="@item.Id" type="button" class="btn btn-warning">Delete</a>
    </td>
</tr>
        }
    </tbody>
</table>
