@model Lighten.Models.Products

@{ ViewData["Lighten"] = "AddItem"; }
@{ Layout = "_Layout"; }
<br />
<h4>Add Item Detail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for=" LightModel" class="control-label"></label>
                <input asp-for=" LightModel" class="form-control border" />
                <span asp-validation-for=" LightModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for=" LightCompany" class="control-label"></label>
                <input asp-for=" LightCompany" class="form-control border" />
                <span asp-validation-for=" LightCompany" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for=" LightType" class="control-label"></label>
                <input asp-for=" LightType" class="form-control border" />
                <span asp-validation-for=" LightType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for=" Price" class="control-label"></label>
                <input asp-for=" Price" class="form-control border" />
                <span asp-validation-for=" Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Light" class="btn btn-primary" />
                <a asp-action="Index" type="button" class="btn btn-warning">Back to List</a>
            </div>
        </form>
    </div>
</div>
